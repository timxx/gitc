    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: QGitc (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/qgitc.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Blame (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/qgitc.py",
            "args": ["blame", "${workspaceRoot}/qgitc/main.py"],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: MergeTool (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/qgitc.py",
            "args": ["mergetool"],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Register Shell (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/qgitc.py",
            "args": ["shell", "register"],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Unregister Shell (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/qgitc.py",
            "args": ["shell", "unregister"],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost"
        },
    ]
}